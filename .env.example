# Pool Manager Config
PORT=3001
POOL_API_KEY=your-shared-pool-secret          # different per environment
POOL_ENVIRONMENT=dev                           # "dev", "staging", or "production"

# Sprite API
SPRITE_TOKEN=your-sprite-api-token

# Injected into each Sprite instance (optional — derived from POOL_ENVIRONMENT if unset)
INSTANCE_ANTHROPIC_API_KEY=sk-ant-...
# INSTANCE_XMTP_ENV=dev                        # defaults: "production" if POOL_ENVIRONMENT=production, else "dev"

# Pool sizing
POOL_MIN_IDLE=3
POOL_MAX_TOTAL=50                              # Sprites have no project-level cap

# Heartbeat (keeps Sprites awake)
HEARTBEAT_INTERVAL_MS=20000                    # 20 seconds

# OpenClaw branch to build inside Sprites (optional — defaults: "main" if production, else "staging")
# OPENCLAW_GIT_REF=main

# Postgres — use local Docker for dev, Neon for deployed environments
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/pool_manager
