# Pool Manager Config
PORT=3001
POOL_API_KEY=your-shared-pool-secret

# Railway API
RAILWAY_API_TOKEN=your-railway-api-token
RAILWAY_PROJECT_ID=your-railway-project-id
RAILWAY_ENVIRONMENT_ID=your-railway-environment-id

# Source repo for new instances
RAILWAY_SOURCE_REPO=xmtplabs/convos-agent-railway-template

# Env vars to inject into each Railway instance
INSTANCE_ANTHROPIC_API_KEY=sk-ant-...
INSTANCE_XMTP_ENV=dev

# Pool sizing
POOL_MIN_IDLE=3
POOL_MAX_TOTAL=10

# Neon Postgres
DATABASE_URL=postgresql://...
